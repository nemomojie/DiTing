{
  "name": "DiTing",
  "version": "1.0.0",
  "description": "Vue for HUE",
  "private": true,
  "dependencies": {
    "axios": "^0.17.1",
    "cross-env": "^5.1.3",
    "egg": "^2.3.0",
    "egg-bcrypt": "^1.1.0",
    "egg-mock": "^3.13.0",
    "egg-oauth2-server": "latest",
    "egg-passport": "latest",
    "egg-redis": "^1.0.2",
    "egg-scripts": "^2.1.0",
    "egg-session-redis": "latest",
    "egg-validate": "latest",
    "lesshat": "^4.1.0",
    "mocha": "^3.2.0",
    "mongoose": "^5.0.1",
    "passport-local": "0.1.x",
    "vue": "^2.5.13",
    "vue-server-renderer": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "autod": "^3.0.1",
    "autod-egg": "^1.0.0",
    "babel-loader": "^8.0.0-beta.0",
    "css-loader": "^0.28.9",
    "egg-bin": "^4.3.5",
    "egg-ci": "^1.8.0",
    "eslint": "^4.17.0",
    "eslint-config-egg": "^5.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "material-design-icons": "^3.0.1",
    "npm": "^5.6.0",
    "rimraf": "^2.6.2",
    "url-loader": "^0.6.2",
    "vue-loader": "^13.7.1",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.13",
    "vue2-animate": "^1.0.4",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0",
    "webstorm-disable-index": "^1.2.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "start": "npm run env-pro && egg-scripts start --daemon",
    "stop": "egg-scripts stop",
    "dev": "npm run env-dev && egg-bin dev",
    "debug": "npm run env-dev && egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "autod": "autod",
    "build": "rimraf app/public/dist && npm run build:client && npm run build:server",
    "build:client": "npm run env-pro && webpack --config build/webpack/client-config-prod.js --progress --hide-modules",
    "build:server": "npm run env-pro && webpack --config build/webpack/server-config-prod.js --progress --hide-modules",
    "env-dev": "cross-env NODE_ENV=development && cross-env EGG_SERVER_ENV=local",
    "env-pro": "cross-env NODE_ENV=production && cross-env EGG_SERVER_ENV=prod",
    "test-rm": "rimraf app/dist"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nemomojie/DiTing"
  },
  "author": "momojie, guojun",
  "license": "MIT"
}
