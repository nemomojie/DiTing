{
  "name": "DiTing",
  "version": "1.0.0",
  "description": "Vue for HUE",
  "private": true,
  "dependencies": {
    "cross-env": "^5.1.3",
    "egg": "^2.0.0",
    "egg-scripts": "^2.1.0",
    "vue": "^2.5.13",
    "vue-server-renderer": "^2.5.13"
  },
  "devDependencies": {
    "autod": "^3.0.1",
    "autod-egg": "^1.0.0",
    "config": "^1.24.0",
    "css-loader": "^0.28.7",
    "egg-bin": "^4.3.5",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.13.0",
    "eslint": "^4.11.0",
    "eslint-config-egg": "^5.1.0",
    "hiredis": "^0.5.0",
    "mocha": "^3.2.0",
    "mongoose": "^4.7.7",
    "redis": "^2.7.1",
    "rimraf": "^2.6.2",
    "vue-loader": "^13.6.1",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0",
    "webstorm-disable-index": "^1.2.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "start": "egg-scripts start --daemon",
    "stop": "egg-scripts stop",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "autod": "autod",
    "build": "rimraf app/public/dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production && webpack --config config/webpack/client-config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production && webpack --config config/webpack/server-config.js --progress --hide-modules",
    "test-rm": "rimraf app/dist"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nemomojie/DiTing"
  },
  "author": "momojie, guojun",
  "license": "MIT"
}
